.container {
    background: #000;
    height: 100%;
    position: relative;
    width: 100%;
}

.img-container {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.img-container,.photo {
    height: 100%;
    position: absolute;
    width: 100%;
}

.bottom-container {
    bottom: 50rpx;
    flex-direction: row;
    position: absolute;
    width: 100%;
}

.bottom-container,.download-container {
    align-items: center;
    display: flex;
    height: 100rpx;
    justify-content: center;
}

.download-container {
    background: #fff;
    border-radius: 50px;
    color: #000;
    flex-direction: column;
    font-size: 32rpx;
    font-weight: 700;
    opacity: .9;
    width: 70%;
}

.back,.home {
    height: 40px;
    left: 40rpx;
    position: absolute;
    top: 80rpx;
    width: 40px;
}

.shareContainer {
    height: 100%;
    position: relative;
    width: 20%;
}

.sharebtnView {
    align-items: center;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    position: absolute;
    width: 100%;
}

.sharebtnView text {
    color: #fff;
    font-size: 25rpx;
    font-weight: 700;
    margin-top: 4rpx;
    text-shadow: 0 0 2px #000;
}

.shareButton {
    height: 100%;
    opacity: 0;
    position: absolute;
    width: 100%;
}