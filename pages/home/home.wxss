.scroll-body {
    height: 88%;
    width: 100%;
}

.tab-container {
    box-sizing: border-box;
    flex-direction: row;
    height: 12%;
    padding-bottom: 10rpx;
    padding-top: 10rpx;
    width: 100%;
}

.tab-container,.tab-item {
    align-items: center;
    display: flex;
}

.tab-item {
    flex-direction: column;
    font-size: 25rpx;
    font-weight: 700;
    height: 100%;
    margin-top: 4rpx;
    width: 25%;
}

.img-container1 {
    background-color: #5e2be9;
}

.img-container1,.img-container2 {
    align-items: center;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    height: 80rpx;
    justify-content: center;
    width: 80rpx;
}

.img-container2,.img-container3 {
    background-color: #5e2be9;
}

.img-container3,.img-container4 {
    align-items: center;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    height: 80rpx;
    justify-content: center;
    width: 80rpx;
}

.img-container4 {
    background-color: #5e2be9;
}

.img {
    height: 50rpx;
    width: 50rpx;
}

.search {
    height: 45rpx;
    margin-left: 30rpx;
    width: 45rpx;
}

.grid-item {
    float: left;
    height: 400rpx;
    margin: 10rpx 0 10rpx 20rpx;
    width: 30%;
}

.g {
    align-items: center;
    display: flex;
    justify-content: center;
    position: relative;
}

.g,.photo {
    height: 100%;
    width: 100%;
}

.photo {
    border-radius: 8px;
}

.info,.photo {
    position: absolute;
}

.info {
    bottom: 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    width: 100%;
}

.title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #fff;
    display: -webkit-box;
    font-size: 28rpx;
    height: 40%;
    overflow: hidden;
    text-shadow: 0 0 2px #000;
    width: 100%;
}

.count-container {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 100%;
}

.count {
    color: #fff;
    font-size: 26rpx;
    text-shadow: 0 0 2px #000;
}

.iv {
    border-radius: 50px;
    box-shadow: 0 0 2px #fff;
    height: 30rpx;
    margin-right: 5rpx;
    width: 30rpx;
}

.adContainer {
    float: left;
    margin-left: 20rpx;
    width: 95%;
}